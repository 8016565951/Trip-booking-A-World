<% layout(dirs.layouts + '/layout') -%>

<div class="container mt-5">
    <h1 class="text-center">Create Banner</h1>

    <div class="row mt-4">
        <div class="col-md-12">
            <form
                action="<%= generateDashUrl('banner.single.create.http') %>"
                method="post"
                enctype="multipart/form-data"
            >
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input
                        type="text"
                        id="title"
                        name="title"
                        class="form-control"
                        required
                    />
                </div>

                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea
                        id="description"
                        name="description"
                        class="form-control"
                        required
                    ></textarea>
                </div>

                <div class="form-group">
                    <label for="bannerimage">Banner Image:</label>
                    <input
                        type="file"
                        id="bannerimage"
                        name="bannerimage"
                        class="form-control-file"
                        required
                    />
                </div>

                <button type="submit" class="btn btn-primary">
                    Create Banner
                </button>
            </form>
        </div>
    </div>
</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
