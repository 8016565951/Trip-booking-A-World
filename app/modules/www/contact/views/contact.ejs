<% layout(dirs.layouts + '/uiLayout') -%>
<!-- contact section start -->

<div class="banner_section" >
    <div class="container mt-5">
        <section
            style="
                height: 100px;
                text-align: center;
                background-color: #1c1c1e;
                color: #fafafa;
                margin-top: 50px;
            "
        >
            <h1 style="color: #f6fcaa">CONTACT US</h1>
        </section>
        <hr style="background-color: #616005; height: 2px" />

        <h1 class="contact_taital">Request A Call Back</h1>
        <form action="<%= generateUrl('www.contact.http') %>" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    required
                />
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                />
            </div>
            <div class="form-group">
                <label for="subject">Phone</label>
                <input
                    type="number"
                    class="form-control"
                    id="subject"
                    name="phone"
                    required
                />
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea
                    class="form-control"
                    id="message"
                    name="message"
                    rows="5"
                    required
                ></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>
</div>

<!-- contact section end -->
