<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/dashboard" class="brand-link">
        <img
            src="/admin/dist/img/AdminLTELogo.png"
            alt="AdminLTE Logo"
            class="brand-image img-circle elevation-3"
            style="opacity: 0.8"
        />
        <span class="brand-text font-weight-light">AdminLTE</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <% if (User) { %>
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <!-- User Avatar Section -->
                <div>
                    <a href="#" class="image">
                        <img
                            src="/<%= User.avatarUrl %>"
                            class="img-circle elevation-2"
                            alt="User Image"
                            style="height: 50px; width: 50px"
                        />
                    </a>
                </div>
        
                <!-- User Info Section -->
                <div class="info">
                    <a href="#" class="d-block"> <%= User.username %> </a>
                    <p>Hello Admin.......</p>
                </div>
            </div>
        
            <!-- User Email Section -->
           
        <% } %>
        
        

        <!-- SidebarSearch Form -->
    
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul
                class="nav nav-pills nav-sidebar flex-column"
                data-widget="treeview"
                role="menu"
                data-accordion="true"
            >
                <% sidebar.forEach(item => { %>
                    <li class="nav-item <% if (item.items) { %>has-treeview<% } %>">
                        <% if (item.items) { %>
                            <!-- Dropdown Menu -->
                            <a
                                href="#"
                                class="nav-link"
                                data-toggle="collapse"
                                data-target="#collapse-<%= item.title %>"
                                aria-expanded="false"
                                aria-controls="collapse-<%= item.title %>"
                            >
                                <i class="nav-icon fas fa-folder"></i>
                                <p>
                                    <%= item.title %>
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul
                                id="collapse-<%= item.title %>"
                                class="nav nav-treeview collapse"
                                aria-labelledby="heading-<%= item.title %>"
                                style="background-color: aliceblue; color: black;"
                            >
                                <% Object.keys(item.items).forEach(key => { %>
                                    <li class="nav-item">
                                        <a
                                            href="<%= generateDashUrl(item.items[key].route) %>"
                                            class="nav-link"
                                        >
                                            <i class="far fa-circle nav-icon"></i>
                                            <p style="color: black;"><%= item.items[key].title %></p>
                                        </a>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <!-- Single Menu Item -->
                            <a
                                href="<%= generateDashUrl(item.route) %>"
                                class="nav-link"
                            >
                                <i class="nav-icon fas fa-fw fa-tachometer-alt"></i>
                                <p><%= item.title %></p>
                            </a>
                        <% } %>
                    </li>
                <% }); %>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
</aside>
